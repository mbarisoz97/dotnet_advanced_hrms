@attribute [Route($"{EmployeeRouting.Create}")]
@rendermode InteractiveServer

@inject IEmployeeServiceClient EmployeeServiceClient;
@inject NavigationManager NavigationManager

<EmployeeForm IsEditMode="false" OnValidSubmit="CreteEmployee" />

@code {
	protected async Task CreteEmployee(Employee employee)
	{
		await EmployeeServiceClient.CreateEmployeeAsync(employee);
		NavigationManager.NavigateTo(EmployeeRouting.Index);
	}
}