@page "/Employee/Create"
@rendermode InteractiveServer

@using Ehrms.Shared
@using System.Net.Http.Headers

@inject IEmployeeInfoServiceClient EmployeeInfoServiceClient;
@inject NavigationManager NavigationManager

<EmployeeForm IsEditMode="false" OnValidSubmit="CreteEmployee" />

@code {
	protected async Task CreteEmployee(Employee employee)
	{
		await EmployeeInfoServiceClient.CreateEmployee(employee);
		NavigationManager.NavigateTo("/Employee");
	}
}